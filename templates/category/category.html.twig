{% extends 'layout.html.twig' %}

{%  block title %} Détail | {{ parent() }}{% endblock %}

{% block main %}
    <div style="margin-top: 50px;">
        <div style="text-align: center; margin-bottom: 20px;">
            <h2  style="margin-bottom: 40px;">Liste des catégories</h2>

            <a href="{{ path('categoryadd') }}"><button type="button" class="btn btn-primary">Ajouter une catégorie</button></a>
        </div>
        <table id="datatablecategory" class="table table-striped table-bordered" style="margin: auto; width:40%">
            <thead>
            <tr style="text-align: center;">
                <th>Nom</th>
                <th>Editer</th>
                <th>Supprimer</th>
            </tr>
            </thead>

            <tbody>
            {% for category in categorys %}
                <tr>
                    <td>{{ category.name }}</td>
                    <td>
                        <div style="text-align: center;">
                            <a href="{{ path('categoryedit', {"id": category.id}) }}"><i style="color: green;" class="fas fa-edit"></i></a>
                        </div>
                    </td>
                    <td>
                        <div style="text-align: center;">
                            <a href="{{ path('categorydelete', {"id": category.id}) }}"><i style="color: red;" class="fas fa-trash-alt"></i></a>
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>

        </table>
    </div>
{% endblock %}
