{% extends 'layout.html.twig' %}

{%  block title %} Annonce | {{ parent() }}{% endblock %}

{% block main %}

    <div>
        <div style="margin-top: 50px;">
            <h4 style="text-align: center; margin-bottom: 40px;">Modifier votre annonce</h4>
        </div>


        <div style="text-align: center;  padding-top: 20px; width: 40%; margin: auto">

            {#{{  form(categoryForm, {"attr": {"novalidate": "novalidate"}}) }}#}

            {{ form_start(adForm) }}
            {{ form_widget(adForm) }}
            <button class="btn btn-success" type="submit">Enregistrer</button>
            {{ form_end(adForm) }}
        </div>

        <div class="container" style="margin-top: 30px;">
            <div class="row justify-content-md-center">
                {% for picture in ad.pictures %}
                    <div class="col-6">
                        <img width="100%" src="{{ asset('upload/images/'~picture.path) }}">
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
